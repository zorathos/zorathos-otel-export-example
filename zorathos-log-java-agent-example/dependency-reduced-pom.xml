<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.github.wangminan</groupId>
  <artifactId>zorathos-log-java-agent-example</artifactId>
  <version>0.0.1</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>io.github.wangminan.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <log4j2.version>2.24.3</log4j2.version>
    <maven.compiler.source>21</maven.compiler.source>
    <maven-shade-plugin.version>3.6.0</maven-shade-plugin.version>
    <slf4j-api.version>2.0.17</slf4j-api.version>
    <opentelemetry-log4j-appender-2.17.version>2.13.3-alpha</opentelemetry-log4j-appender-2.17.version>
    <opentelemetry.version>1.47.0</opentelemetry.version>
    <lombok.version>1.18.36</lombok.version>
    <maven.compiler.target>21</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
